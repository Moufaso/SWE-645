// Author: Saman Hosseini

pipeline {
   agent: any

   enviroment {
      DOCKERHUB_PASS = credentials('dockerhub-id')
   }

   stages {
      stage('Build Application') {
         steps {
            script {
               checkout scm
               sh 'rm -rf HW2/*.war'
               sh 'jar -cvf HW2/StudentSurvey.war -C HW2/StudentSurvey/*'
               sh 'echo ${BUILD_TIMESTAMP}'
               sh "docker login -u moufaso -p ${DOCKERHUB_PASS}"
               def customImage = docker.build("moufaso/studentsurvey645:${BUILD_TIMESTAMP}")
            }
         }
      }

      stage('Push Docker Image') {
         steps{
            script {
               sh 'docker push moufaso/studentsurvey645:${BUILD_TIMESTAMP}'
            }
         }
      }
   }

   post {
      always {
         echo 'Cleaning up...'
      }
      success {
         echo 'Deployment successful.'
      }
      failure {
         echo 'Deployment failed!'
      }
   }
}